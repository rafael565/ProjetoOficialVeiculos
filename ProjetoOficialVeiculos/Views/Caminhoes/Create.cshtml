@model ProjetoOficialVeiculos.Models.Caminhao

@{
    ViewData["Title"] = "Cadastro de Caminhão";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --dark-charcoal: #333333;
            --slate-gray: #708090;
            --light-gray: #f5f5f5;
            --medium-gray: #e0e0e0;
            --dark-gray: #2d2d2d;
            --accent-color: #4a90e2;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--dark-charcoal);
        }

        .form-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: var(--shadow);
            padding: 2.5rem;
            margin: 2rem auto;
            max-width: 600px;
            border: 1px solid var(--medium-gray);
        }

        .form-title {
            color: var(--dark-charcoal);
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
            font-size: 1.8rem;
            letter-spacing: 0.5px;
            position: relative;
            padding-bottom: 1rem;
        }

            .form-title:after {
                content: '';
                display: block;
                width: 60px;
                height: 3px;
                background: var(--accent-color);
                margin: 0.5rem auto 0;
                border-radius: 3px;
            }

        .form-label {
            color: var(--dark-gray);
            font-weight: 500;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-control {
            border: 1px solid var(--medium-gray);
            border-radius: 8px;
            padding: 0.85rem 1.25rem;
            background-color: white;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 0.25rem rgba(74, 144, 226, 0.15);
            }

        .form-control-lg {
            padding: 1rem 1.5rem;
            font-size: 1.1rem;
        }

        .btn-primary {
            background-color: var(--dark-charcoal);
            border: none;
            padding: 0.85rem 1.5rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border-radius: 8px;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn-primary:hover {
                background-color: var(--dark-gray);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-link {
            color: var(--slate-gray);
            text-decoration: none;
            transition: color 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

            .btn-link:hover {
                color: var(--dark-charcoal);
            }

            .btn-link i {
                margin-right: 6px;
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .form-group {
            margin-bottom: 1.75rem;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
        }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--slate-gray);
            }

        .placa-mask {
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1 class="form-title">Cadastro de Caminhão</h1>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="form-group input-icon">
                    <label asp-for="placa" class="form-label">Placa do Caminhão</label>
                    <input asp-for="placa" class="form-control form-control-lg placa-mask"
                           placeholder="AAA-0000 ou AAA0A00"
                           maxlength="7"
                           oninput="formatarPlaca(this)" />
                    <i class="fas fa-truck"></i>
                    <span asp-validation-for="placa" class="text-danger"></span>
                    <small class="text-muted">Digite a placa no formato Mercosul (AAA0A00) ou antigo (AAA-0000)</small>
                </div>

                <div class="action-buttons">
                    <a asp-action="Index" class="btn-link">
                        <i class="fas fa-arrow-left"></i> Voltar para lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cadastrar Caminhão
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Função para formatar automaticamente a placa do veículo
        function formatarPlaca(input) {
            // Remove tudo que não é letra ou número
            let value = input.value.replace(/[^a-zA-Z0-9]/g, '').toUpperCase();

            // Formatação para placas no padrão Mercosul (AAA0A00)
            if (value.length > 3) {
                value = value.substring(0, 3) + value.substring(3, 4).toUpperCase() + value.substring(4);
            }
            if (value.length > 4) {
                value = value.substring(0, 4) + value.substring(4).toUpperCase();
            }

            // Atualiza o valor no campo
            input.value = value;
        }

        // Foco automático no campo de placa ao carregar a página
        $(document).ready(function() {
            $('input[name="placa"]').focus();
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>