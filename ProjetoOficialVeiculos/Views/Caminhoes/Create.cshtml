@model ProjetoOficialVeiculos.Models.Caminhao

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Cadastro de Caminhão</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campo para Placa do Caminhão -->
                <div class="form-group mb-3">
                    <label asp-for="placa" class="form-label fs-5">Placa do Caminhão</label>
                    <input asp-for="placa" class="form-control form-control-lg rounded-3" placeholder="Digite a placa" />
                    <span asp-validation-for="placa" class="text-danger"></span>
                </div>

                <!-- Botão de Submit -->
                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary btn-lg rounded-3 w-100">Criar Caminhão</button>
                </div>
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-link text-decoration-none">Voltar para a lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
