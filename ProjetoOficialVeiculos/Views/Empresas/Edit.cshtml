@model ProjetoOficialVeiculos.Models.Empresa

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Editar Lista de Empresas</h1>

<div class="card shadow-sm border-primary">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Edit Company Information</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />

            <div class="form-group">
                <label asp-for="nome" class="control-label">Company Name</label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cnpj" class="control-label">CNPJ</label>
                <input asp-for="cnpj" class="form-control" />
                <span asp-validation-for="cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contato" class="control-label">Contact</label>
                <input asp-for="contato" class="form-control" />
                <span asp-validation-for="contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco" class="control-label">Address</label>
                <input asp-for="endereco" class="form-control" />
                <span asp-validation-for="endereco" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Cancelar</a>
            </div>
        </form>
    </div>
</div>
