@model ProjetoOficialVeiculos.Models.Empresa

@{
    ViewData["Title"] = "Cadastro de Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --dark-charcoal: #333333;
            --slate-gray: #708090;
            --light-gray: #f5f5f5;
            --medium-gray: #e0e0e0;
            --dark-gray: #2d2d2d;
            --accent-color: #4a90e2;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--dark-charcoal);
        }

        .form-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: var(--shadow);
            padding: 2.5rem;
            margin: 2rem auto;
            max-width: 600px;
            border: 1px solid var(--medium-gray);
        }

        .form-title {
            color: var(--dark-charcoal);
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
            font-size: 1.8rem;
            letter-spacing: 0.5px;
            position: relative;
            padding-bottom: 1rem;
        }

            .form-title:after {
                content: '';
                display: block;
                width: 60px;
                height: 3px;
                background: var(--accent-color);
                margin: 0.5rem auto 0;
                border-radius: 3px;
            }

        .form-label {
            color: var(--dark-gray);
            font-weight: 500;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-control {
            border: 1px solid var(--medium-gray);
            border-radius: 8px;
            padding: 0.85rem 1.25rem;
            background-color: white;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 0.25rem rgba(74, 144, 226, 0.15);
            }

        .form-control-lg {
            padding: 1rem 1.5rem;
            font-size: 1.1rem;
        }

        .btn-primary {
            background-color: var(--dark-charcoal);
            border: none;
            padding: 0.85rem 1.5rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border-radius: 8px;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn-primary:hover {
                background-color: var(--dark-gray);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-link {
            color: var(--slate-gray);
            text-decoration: none;
            transition: color 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

            .btn-link:hover {
                color: var(--dark-charcoal);
            }

            .btn-link i {
                margin-right: 6px;
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .form-group {
            margin-bottom: 1.75rem;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
        }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--slate-gray);
            }

        .placa-mask {
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1 class="form-title">Cadastro de Empresa</h1>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" style="; border-color: #ff6b6b;"></div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="nome" class="form-label">Nome da Empresa</label>
                            <div class="input-icon">
                                <input asp-for="nome" class="form-control form-control-lg"
                                       placeholder="Digite o nome completo da empresa" />
                                <i class="fas fa-building"></i>
                            </div>
                            <span asp-validation-for="nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="cnpj" class="form-label">CNPJ/CPF</label>
                            <div class="input-icon">
                                <input asp-for="cnpj" class="form-control form-control-lg cnpj-mask"
                                      />
                                <i class="fas fa-id-card"></i>
                            </div>
                            <span asp-validation-for="cnpj" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="contato" class="form-label">Contato</label>
                            <div class="input-icon">
                                <input asp-for="contato" class="form-control form-control-lg"
                                       placeholder="(00) 00000-0000"
                                       oninput="formatarTelefone(this)" />
                                <i class="fas fa-phone"></i>
                            </div>
                            <span asp-validation-for="contato" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="endereco" class="form-label">Endereço Completo</label>
                            <div class="input-icon">
                                <input asp-for="endereco" class="form-control form-control-lg"
                                       placeholder="Rua, número, complemento, bairro, cidade - UF" />
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <span asp-validation-for="endereco" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <a asp-action="Index" class="btn-link">
                        <i class="fas fa-arrow-left"></i> Voltar para lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cadastrar Empresa
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    
        // Função para formatar telefone
        function formatarTelefone(input) {
            let value = input.value.replace(/\D/g, '');

            if (value.length > 10) {
                value = '(' + value.substring(0, 2) + ') ' + value.substring(2, 7) + '-' + value.substring(7, 11);
            } else if (value.length > 6) {
                value = '(' + value.substring(0, 2) + ') ' + value.substring(2, 6) + '-' + value.substring(6, 10);
            } else if (value.length > 2) {
                value = '(' + value.substring(0, 2) + ') ' + value.substring(2, 6);
            } else if (value.length > 0) {
                value = '(' + value;
            }

            input.value = value;
        }

        // Foco automático no campo de nome ao carregar a página
        $(document).ready(function() {
            $('input[name="nome"]').focus();
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>