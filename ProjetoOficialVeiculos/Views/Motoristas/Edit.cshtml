@model ProjetoOficialVeiculos.Models.Motorista

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-black mb-4">Editar Motorista</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-dark">
            <div class="card-header text-center bg-dark text-white">
                <h4 class="mb-0">Editar Material</h4>
            </div>
            <div class="card-body bg-dark text-white">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="id" />

                    <!-- Nome -->
                    <div class="form-group mb-3">
                        <label asp-for="nome" class="form-label">Nome do Motorista</label>
                        <input asp-for="nome" class="form-control form-control-lg" placeholder="Digite o nome do motorista" style="height: 60px; padding: 10px; width: 100%; box-sizing: border-box;" />
                        <span asp-validation-for="nome" class="text-danger"></span>
                    </div>


                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg" style="width: 100%; height: 60px;">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-link text-white">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
