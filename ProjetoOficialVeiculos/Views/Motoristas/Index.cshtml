@model IEnumerable<ProjetoOficialVeiculos.Models.Motorista>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mb-3">
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-outline-secondary px-4 py-2 shadow-sm rounded-pill transition"
       style="display: inline-flex; align-items: center; gap: 8px;">
        <i class="fas fa-arrow-left"></i>
        <span>Voltar para Início</span>
    </a>
</div>

<h1 class="text-center text-black mb-4">Lista de Motoristas</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-lg">Criar Novo Motorista</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
          
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Customizando a cor de fundo do cabeçalho da tabela e o texto */
    thead.thead-dark th {
        background-color: #343a40; /* Preto */
        color: white; /* Texto branco */
    }
</style>
