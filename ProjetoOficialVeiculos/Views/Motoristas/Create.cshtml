@model ProjetoOficialVeiculos.Models.Motorista

@{
    ViewData["Title"] = "Cadastro de Motorista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --dark-charcoal: #333333;
            --slate-gray: #708090;
            --light-gray: #f5f5f5;
            --medium-gray: #e0e0e0;
            --accent-color: #4a90e2;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--dark-charcoal);
        }

        .form-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: var(--shadow);
            padding: 2.5rem;
            margin: 2rem auto;
            max-width: 600px;
            border: 1px solid var(--medium-gray);
        }

        .form-title {
            color: var(--dark-charcoal);
            font-weight: 600;
            margin-bottom: 1rem;
            text-align: center;
            font-size: 1.8rem;
            position: relative;
        }

        .form-subtitle {
            color: var(--slate-gray);
            text-align: center;
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .form-label {
            color: var(--dark-charcoal);
            font-weight: 500;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-control {
            border: 1px solid var(--medium-gray);
            border-radius: 8px;
            padding: 0.85rem 1.25rem;
            background-color: white;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 0.25rem rgba(74, 144, 226, 0.15);
            }

        .form-control-lg {
            padding: 1rem 1.5rem;
            font-size: 1.1rem;
        }

        .btn-primary {
            background-color: var(--accent-color);
            border: none;
            padding: 0.85rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 8px;
            font-size: 1rem;
        }

            .btn-primary:hover {
                background-color: #3a7bc8;
                transform: translateY(-2px);
            }

        .btn-link {
            color: var(--slate-gray);
            text-decoration: none;
            transition: color 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

            .btn-link:hover {
                color: var(--accent-color);
            }

            .btn-link i {
                margin-right: 6px;
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
            color: #dc3545;
        }

        .form-group {
            margin-bottom: 1.75rem;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
        }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--slate-gray);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h1 class="form-title">Cadastro de Motorista</h1>
            <p class="form-subtitle">Preencha os dados do motorista</p>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="form-group input-icon">
                    <label asp-for="nome" class="form-label">Nome Completo</label>
                    <input asp-for="nome" class="form-control form-control-lg"
                           placeholder="Digite o nome completo do motorista" />
                    <i class="fas fa-user"></i>
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="action-buttons">
                    <a asp-action="Index" class="btn-link">
                        <i class="fas fa-arrow-left"></i> Voltar para lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cadastrar Motorista
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Foco automático no campo de nome ao carregar a página
        $(document).ready(function() {
            $('input[name="nome"]').focus();
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>