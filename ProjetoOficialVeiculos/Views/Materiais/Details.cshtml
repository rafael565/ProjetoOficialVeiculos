@model ProjetoOficialVeiculos.Models.Material

@{
    ViewData["Title"] = "Detalhes do Material";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-black mb-4">Detalhes do Material</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-dark">
            <div class="card-header text-center bg-dark text-white">
                <h4 class="mb-0">Detalhes do Material</h4>
            </div>
            <div class="card-body bg-dark text-white">
                <h4>Material</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.quantidade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.quantidade)
                    </dd>
                </dl>

                <div class="text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning btn-lg" style="width: 100%; height: 60px;">Editar</a>
                    <a asp-action="Index" class="btn btn-link text-white mt-2">Voltar para a lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
